{
  "ServiceSettings": {
    "ServiceName": "TodoService",
    "AllowedHosts": "*"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=TodoDb;User Id=sa;Password=yourStrong(!)Password;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "Key": "your-secret-key-here-must-be-at-least-32-characters",
    "Issuer": "auth-service",
    "Audience": "todo-app",
    "ExpiryInHours": 1,
    "RefreshTokenExpiryInDays": 7,
    "ClockSkew": 0
  },
  "ElasticsearchSettings": {
    "Url": "http://localhost:9200"
  },
  "RabbitMQSettings": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning"
    }
  }
} 